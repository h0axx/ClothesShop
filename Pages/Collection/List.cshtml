@page
@model OnlineShop.Pages.Collection.ListModel
@{
    ViewData["Title"] = "Collection";
}

<h1>List</h1>
<table class="table">
    @foreach (var product in Model.Products)
    {
    <tr>
        @if (product.PhotosPath.Count > 0)
        {
            <td width="400">
                <a asp-page="./Detail" asp-route-productId="@product.Id">
                    <img src="~/images/@product.Id/@product.PhotosPath[0]" width="30%" height="30%" />
                </a>
            </td>
        }
        else
        {
            <td width="400">
                <a asp-page="./Detail" asp-route-productId="@product.Id"></a>
            </td>
        }
        <td>@product.Name</td>
        <td>@product.Price</td>
        <td>@product.Size</td>
    </tr>
    }
</table>