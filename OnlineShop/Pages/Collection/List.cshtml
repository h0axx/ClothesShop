@page
@model OnlineShop.Pages.Collection.ListModel
@{
    ViewData["Title"] = "Collection";
}

@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}
<div style="clear:both; padding:inherit" p>
    <form method="get">
        <div class="input-group">
            <input class="form-control" asp-for="SearchTerm" />
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>
</div>
<div class="row">
    
    @if (Model.Admin == true)
    {
        foreach (var product in Model.Products)
        {
            <div class="col-xl-4 col-lg-4 col-md-6 col-sm 6">
                <partial name="_AdminSummary" model="product" />
            </div>
        }
    }
    else
    {
        foreach (var product in Model.Products)
        {
            <div class="col-xl-4 col-lg-4 col-md-6 col-sm 6">
                <partial name="_Summary" model="product" />
            </div>
        }
    }
</div>
