@page
@model OnlineShop.Pages.Collection.ListModel
@{
    ViewData["Title"] = "Collection";
}

@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}

<p>  
    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#multiCollapseExample2" aria-expanded="false" aria-controls="multiCollapseExample2">Sort by</button>
</p>
<div class="row">
    <div class="col p-3">
        <div class="collapse multi-collapse" id="multiCollapseExample2">
            <div class="card card-body">
                <form method="get">

                    <div class="d-flex form-row p-3">

                        <div class="form-group m-1">
                            <label asp-for="Size"></label>
                            <select asp-for="Size" class="form-control"
                                    asp-items="Model.Sizes">
                            </select>
                        </div>

                        <div class="form-group m-1">
                            <label asp-for="Gender"></label>
                            <select asp-for="Gender" class="form-control"
                                    asp-items="Model.Genders">
                            </select>
                        </div>

                        <div class="form-group m-1">
                            <label asp-for="Fabric"></label>
                            <select asp-for="Fabric" class="form-control"
                                    asp-items="Model.Fabrics">
                            </select>
                        </div>

                        <div class="form-group m-1">
                            <label asp-for="Type"></label>
                            <select asp-for="Type" class="form-control"
                                    asp-items="Model.Types">
                            </select>
                        </div>

                        <div class="d-flex align-items-end form-group m-1">
                            <input class="form-control" asp-for="SearchTerm" />
                        </div>

                        <div class="d-flex align-items-end form-group m-1">
                            <button type="submit" class="btn btn-primary">Search</button>
                        </div>

                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">

    @if (Model.Admin == true)
    {
        foreach (var product in Model.Products)
        {
            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6 my-2">
                <partial name="_AdminSummary" model="product" />
            </div>
        }
    }
    else
    {
        foreach (var product in Model.Products)
        {
            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6 my-2">
                <partial name="_Summary" model="product" />
            </div>
        }
    }
</div>
