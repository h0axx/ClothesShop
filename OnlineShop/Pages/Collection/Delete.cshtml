@page "{productId:int}"
@model OnlineShop.Pages.Collection.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete @Model.Product.Name</h2>
<div class="alert alert-danger">
    Are you sure you want to delete this product?
</div>
<form method="post">
    <button type="submit" class=" btn btn-danger">Yes</button>
    <a asp-page="List" class="btn">Cancel</a>
</form>

